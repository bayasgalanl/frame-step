{
  "name": "framestep",
  "version": "1.0.0",
  "description": "Electron video player with true frame-stepping capabilities",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "video-player",
    "electron",
    "ffmpeg",
    "frame-stepping"
  ],
  "author": "FrameStep Maintainer <maintainer@framestep.app>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "build": {
    "appId": "com.framestep.app",
    "productName": "FrameStep",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "bin/ffmpeg"
      },
      {
        "from": "node_modules/ffprobe-static/bin/linux/x64/ffprobe",
        "to": "bin/ffprobe"
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "assets/Icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/Icon.png"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Video",
      "icon": "assets/icons",
      "desktop": {
        "Name": "FrameStep",
        "Comment": "Electron video player with true frame-stepping capabilities",
        "Categories": "Video"
      }
    }
  }
}